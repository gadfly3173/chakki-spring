<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gadfly.chakkispring.mapper.ClassMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="vip.gadfly.chakkispring.model.ClassDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="info" property="info"/>
        <result column="sign_id" property="signId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="delete_time" property="deleteTime"/>
    </resultMap>


    <select id="selectUserClasses" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT g.id, g.name, g.info,
        g.create_time,g.update_time,g.delete_time
        from class AS g
        WHERE
        g.delete_time IS NULL
        AND
        g.id IN
        (
        SELECT ug.class_id
        FROM lin_user AS u
        LEFT JOIN student_class as ug
        ON ug.user_id = u.id
        WHERE u.id = #{userId}
        AND u.delete_time IS NULL
        )
        ORDER BY g.id DESC
    </select>

    <select id="selectUserClassIds" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT g.id
        from class AS g
        WHERE
        g.delete_time IS NULL
        AND
        g.id IN
        (
        SELECT ug.class_id
        FROM lin_user AS u
        LEFT JOIN student_class as ug
        ON ug.user_id = u.id
        WHERE u.id = #{userId}
        AND u.delete_time IS NULL
        )
    </select>

    <select id="selectCountById" parameterType="java.lang.Long" resultType="java.lang.Integer">
        SELECT COUNT(*) AS count FROM class WHERE delete_time IS NULL AND id = #{id}
    </select>

