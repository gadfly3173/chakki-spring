<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gadfly.chakkispring.mapper.StudentSignMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="vip.gadfly.chakkispring.model.StudentSignDO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="sign_id" property="signId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <resultMap id="SignResultMap" type="vip.gadfly.chakkispring.vo.StudentSignVO">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <association property="user" javaType="vip.gadfly.chakkispring.model.UserDO">
            <id property="id" column="id"/>
            <result property="username" column="username"/>
            <result property="nickname" column="nickname"/>
        </association>
    </resultMap>

    <select id="selectUserSignDetailBySignId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT g.id, g.name, g.info,
               g.create_time,g.update_time,g.delete_time
        from class AS g
        WHERE
            g.delete_time IS NULL
          AND
                g.id IN
                (
                    SELECT ug.class_id
                    FROM lin_user AS u
                             LEFT JOIN student_class as ug
                                       ON ug.user_id = u.id
                    WHERE u.id = #{userId}
                      AND u.delete_time IS NULL
                )
    </select>
</mapper>
