<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gadfly.chakkispring.mapper.SignListMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="vip.gadfly.chakkispring.model.SignListDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="class_id" property="classId"/>
        <result column="signed" property="signed"/>
        <result column="create_time" property="createTime"/>
        <result column="end_time" property="endTime"/>
    </resultMap>

    <select id="selectSignPageByClassId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT u.id, u.name, u.signed, u.create_time,
               u.end_time
        FROM sign_list AS u
        WHERE u.class_id = #{classId}
    </select>

</mapper>
